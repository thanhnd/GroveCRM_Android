<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:id="@+id/rootView"
    android:background="@drawable/shape_stroke_top"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ivNotifyImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tvNotifyTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/content_vertical_padding"
        android:ellipsize="end"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque id sodales odio. Aliquam felis augue, ultricies eget bibendum ac, molestie non elit. Aenean iaculis nec diam nec rutrum."
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>